            <div class=" col-12 col-sm-3 col-md-2"></div>
            <!-- khối 4 -->
            <div class=" col-12 col-sm-9 col-md-8">

              
              <% if(msg.length>0) {%>
                <h3> <%= msg %></h3>
                <% } %>
                <form action="" method="post">
                    <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">Tên Đăng Nhập </label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="username">
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputEmail1" class="form-label">Email address</label>
                        <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                      </div>
                      <div class="mb-3">
                        <label for="exampleInputPassword1" class="form-label">PassWord</label>
                        <input type="password" class="form-control" id="exampleInputPassword1" name="pass">
                      </div>

          

                      <div class=" mb-3 form-check">
                        <input class="form-check-input" type="radio" name="admin" id="option1" value="true">
                        <label class="form-check-label" for="option1">
                          Admin
                        </label>
                      </div>
                      <div class=" mb-3 form-check">
                        <input class="form-check-input" type="radio" name="admin" id="option2" value="false">
                        <label class="form-check-label" for="option2">
                         User
                        </label>
                      </div>
                    

                    <button type="submit" class="btn btn-primary">Submit</button>
                  </form>
            
           </div>
           
