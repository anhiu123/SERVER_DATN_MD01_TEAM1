                <div style="font-size: 24px; margin-left:130px ;">
                    <i class="fas fa-user"  style="font-size: 34px;"></i>
                    <%= objU.role %>
                </div>
             
            </div>
            <hr>

            <!-- Khối 2 -->
            <div class=" col-12">
                <div class="align-items-center bg-white">
                    <nav class="navbar navbar-expand-lg bg-body-tertiary">
                        <div class="container-fluid">
