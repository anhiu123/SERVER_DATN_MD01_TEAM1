            </div>
            <!-- khối 3 -->
            <div class=" col-12 col-sm-3 col-md-2"></div>
            <!-- khối 4 -->
          
       
         
            <div class=" col-12 col-sm-9 col-md-8">
              <div class="mt-5">
                <table class="table table-bordered mx-auto" border="1">
                      <br>
                    <tr>
                        <th>ID</th>  
                        <th>Tên Sản Phẩm</th> 
                        <th>Ảnh</th>
                        <th>Giá</th>
                        <th>Loại</th>
                        <th>Màu Sắc</th>
                        <th>Size </th>
                        <th>Số Lượng </th>
                        <th>Thành Tiền  </th>
                    </tr>
                   <% let totalAmount = 0; %>
                    <% listspd.forEach((spdItem) => { %>
                        <% let product = listsp.find(productItem => productItem._id.toString() === spdItem.SanPhamId.toString()) %>
                        <% if (product) { %>
                           <% totalAmount += product.price * spdItem.SoLuong; %>
                            <tr>
                                <td><%= product._id %></td>
                                <td><%= product.name %></td>
                                <td><img src="<%= product.image %>" style="width: 130px; height: 70px;" alt=""></td>
                               
                                <td><%= product.price %></td>
                                <td><%= product.loai %></td>
                                <td>
                                    <!-- <% listmauSP.forEach((mau) => { %>
                                        <% if (mau.productId.toString() === product._id.toString()) { %>
                                            <% mauList.forEach((mauInfo) => { %>
                                                <% if (mauInfo._id.toString() === mau.colorId.toString()) { %>
                                                    <div class="color-box text-center" style="background-color: <%= '#' + mauInfo.colorcode %>; width: 50px; height: 50px;"></div>
                                                <% } %>
                                            <% }); %>
                                        <% } %>
                                    <% }); %> -->
                                    <div class="color-box text-center" style="background-color: <%= '#' + spdItem.ColorCode %>; width: 50px; height: 50px;"></div>
                                </td>
                                <td><%= spdItem.Size %></td>
                                <td><%= spdItem.SoLuong %></td>
                                <td><%= spdItem.SoLuong * product.price %> </td>
                            </tr>
                        <% } %>
                    <% }); %>
                </table>
                <h1>Tổng tiền: <%= totalAmount %> đ</h1>


            </div></div>
           
            <div class=" col-12           col-md-2 d-none d-md-block"></div>
