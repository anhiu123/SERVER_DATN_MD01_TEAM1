    <script>
      // Khai báo biến để lưu trữ số tin nhắn
      let messageCount = 0;
    
      // Hàm để cập nhật số tin nhắn và hiển thị nó
      function updateMessageCount() {
        // Tăng số tin nhắn lên mỗi khi có tin mới
        messageCount++;
        
        // Lấy phần tử span theo id
        const messageCountElement = document.getElementById('messageCount');
        
        // Hiển thị số tin nhắn mới trong span
        messageCountElement.textContent = messageCount;
      }
    
      // Gọi hàm này khi có tin nhắn mới
      // Ví dụ: sau khi người dùng gửi tin nhắn
